{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "trafficManagerProfileName": {
             "type": "String"
      },
      "PublicEndPoint1ResourceId": {
        "type": "String"
        },
        "PublicEndPoint1Name": {
            "type": "String"
        }       
    },
    "variables": {},
    "resources": [
      {
        "type": "Microsoft.Network/trafficManagerProfiles",
        "name": "[parameters('trafficManagerProfileName')]",
        "apiVersion": "2018-04-01",
        "location": "global",
        "tags": {},
        "scale": null,
        "properties": {
          "profileStatus": "Enabled",
          "trafficRoutingMethod": "Performance",
          "dnsConfig": {
            "relativeName": "[parameters('trafficManagerProfileName')]",
            "ttl": 60
          },
          "monitorConfig": {
            "profileMonitorStatus": null,
            "protocol": "HTTP",
            "port": 80,
            "path": "/",
            "intervalInSeconds": 30,
            "toleratedNumberOfFailures": 3,
            "timeoutInSeconds": 10
          },
          "endpoints": [
            {
                "name": "[parameters('PublicEndPoint1Name')]",
                "type": "Microsoft.Network/trafficManagerProfiles/azureEndpoints",
                "properties": {
                  "targetResourceId": "[parameters('PublicEndPoint1ResourceId')]",
                  "priority": 1,
                  "endpointStatus": "Enabled"
                }
              }
          ],
          "trafficViewEnrollmentStatus": "Disabled",
          "maxReturn": 0
        },
        "dependsOn": []
      }
    ]
  }