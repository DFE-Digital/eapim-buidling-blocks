{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "coreResourceGroupName": {
      "type": "string"
    },
    "vNetname": {
      "type": "string"
    },
    "shared_ag_subnetName": {
      "type": "string"
    },
    "enableDdosProtection": {
      "type": "bool"
    },
    "keyVaultName": {
      "type": "string"
    },
    "publicIpAddressName": {
      "type": "string"
    },
    "keyVault_sku": {
      "type": "string"
    },
    "applicationGatewayName": {
      "type": "string"
    },
    "applicationGatewayFirewallName": {
      "type": "string"
    },
    "appGatewayCapacity": {
      "type": "int"
    },
    "AccessPolicyObjectId": {
      "type": "string"
    },
    "trafficManagerProfileName": {
      "type": "string"
    },
    "trafficManagerEndPoints": {
      "type": "array",
      "defaultValue": []
    }
  },
  "variables": {},
  "resources": [
    {
      "apiVersion": "2017-05-10",
      "name": "app-gateway-public-ip",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/DFE-Digital/eapim-infrastructure/master/shared/deployments/public-ip.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "publicIpAddressName": {
            "value": "[parameters('publicIpAddressName')]"
          },
          "publicIpAddressSku": {
            "value": "Standard"
          },
          "publicIpAddressAllocationMethod": {
            "value": "Dynamic"
          }
        }
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "app-gateway",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/DFE-Digital/eapim-infrastructure/feature/sandbox-environment/shared/deployments/app-gateway-basic.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "applicationGatewayName": {
            "value": "[parameters('applicationGatewayName')]"
          },
          "applicationGatewaySku": {
            "value": "WAF_Medium"
          },
          "appGatewayCapacity": {
            "value": "[parameters('appGatewayCapacity')]"
          },

          "appGatewaySubnetName": {
            "value": "[parameters('shared_ag_subnetName')]"
          },
          "appGatewayVirtualNetworkName": {
            "value": "[parameters('vNetname')]"
          },
          "keyVaultName": {
            "value": "[parameters('keyVaultName')]"
          },
          "subnetResourceId": {
            "value": "[resourceId(parameters('coreResourceGroupName'),'Microsoft.Network/virtualNetworks/subnets', parameters('vNetname'), parameters('shared_ag_subnetName'))]"
          },
          "appGatewaypublicIpAddressName": {
            "value": "[parameters('publicIpAddressName')]"
          },
          "applicationGatewayFirewallName": {
            "value": "[parameters('applicationGatewayFirewallName')]"
          }
        }
      },
      "dependsOn": [
        "app-gateway-public-ip"
      ]
    },
    {
      "apiVersion": "2017-05-10",
      "name": "traffic-manager",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/DFE-Digital/eapim-infrastructure/master/shared/deployments/traffic-manager.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "EndPoints": {
            "value": "[parameters('trafficManagerEndPoints')]"
          },
          "trafficManagerProfileName": {
            "value": "[parameters('trafficManagerProfileName')]"
          }
        }
      },
      "dependsOn": [
        "app-gateway"
      ]
    }
  ],
  "outputs": {}
}
