{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vNetname": {
            "type": "string"
        },
        "vNetaddressPrefix": {
            "type": "string"
        },
        "subnetName": {
            "type": "string"
        },
        "subnetAddressPrefix": {
            "type": "string"
        },
        "enableDdosProtection": {
            "type": "bool"
        },
        "keyVaultName": {
            "type": "string"
        },
        "keyVault_sku": {
            "type": "string"
        },
        "AccessPolicyObjectId": {
            "type": "string"
        },
        "publicIpAddressName": {
            "type": "string"
        },
        "appGatewayMinCapacity": {
            "type": "int"
        },
        "apimBackendAddress": {
            "type": "string"
        },
        "apimGatewayHostname": {
            "type": "string"
        },
        "apimPortalHostname": {
            "type": "string"
        },
        "apimGatewayCertData": {
            "type": "securestring"
        },
        "apimGatewayCertPassword": {
            "type": "securestring"
        },
        "apimPortalCertData": {
            "type": "securestring"
        },
        "apimPortalCertPassword": {
            "type": "securestring"
        }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "vnet",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/DFE-Digital/eapim-infrastructure/master/shared/deployments/vnet.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vNetname": {
                        "value": "[parameters('vNetname')]"
                    },
                    "vNetaddressPrefix": {
                        "value": "[parameters('vNetaddressPrefix')]"
                    },
                    "subnetName": {
                        "value": "[parameters('subnetName')]"
                    },
                    "subnetAddressPrefix": {
                        "value": "[parameters('subnetAddressPrefix')]"
                    },
                    "enableDdosProtection": {
                        "value": "[parameters('enableDdosProtection')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "app-gateway-public-ip",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/DFE-Digital/eapim-infrastructure/master/shared/deployments/public-ip.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "publicIpAddressName": {
                        "value": "[parameters('publicIpAddressName')]"
                    },
                    "publicIpAddressSku": {
                        "value": "Standard"
                    },
                    "publicIpAddressAllocationMethod": {
                        "value": "Static"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "app-gateway",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/DFE-Digital/eapim-infrastructure/master/shared/deployments/app-gateway.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "applicationGatewayName": {
                        "value": ""
                    },
                    "applicationGatewaySku": {
                        "value": "WAF_v2"
                    },
                    "applicationGatewayMinCapacity": {
                        "value": "[parameters('appGatewayMinCapacity')]"
                    },
                    "subnetResourceId": {
                        "value": "[reference('vnet').outputs.appGatewaySubnetResourceId.value]"
                    },
                    "publicIpResourceId": {
                        "value": "[reference('app-gateway-public-ip').outputs.publicIpResourceId.value]"
                    },
                    "apimBackendAddress": {
                        "value": "[parameters('apimBackendAddress')]"
                    },
                    "apimGatewayHostname": {
                        "value": "[parameters('apimGatewayHostname')]"
                    },
                    "apimPortalHostname": {
                        "value": "[parameters('apimPortalHostname')]"
                    },
                    "apimGatewayCertData": {
                        "value": "[parameters('apimGatewayCertData')]"
                    },
                    "apimGatewayCertPassword": {
                        "value": "[parameters('apimGatewayCertPassword')]"
                    },
                    "apimPortalCertData": {
                        "value": "[parameters('apimPortalCertData')]"
                    },
                    "apimPortalCertPassword": {
                        "value": "[parameters('apimPortalCertPassword')]"
                    }
                }
            },
            "dependsOn": [
                "app-gateway-public-ip",
                "vnet"
            ]
        },
        {
            "apiVersion": "2017-05-10",
            "name": "keyvault",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/DFE-Digital/eapim-infrastructure/master/shared/deployments/key-vault.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "keyVaultName": {
                        "value": "[parameters('keyVaultName')]"
                    },
                    "keyVault_sku": {
                        "value": "[parameters('keyVault_sku')]"
                    },
                    "AccessPolicyObjectId": {
                        "value": "[parameters('AccessPolicyObjectId')]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}